{
  "AWSESBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "ozerdur/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "ozerdur/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "ozerdur/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "ozerdur/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings":[
        {
          "hostPort":80,
          "containerPort":80
        }
      ],
      "links":["client", "server"]
    }
  ]
}